# ======================================
# CONFIGURACIÓN AWS COGNITO - CAPBOX
# ======================================

# Región de AWS donde están desplegados los servicios
AWS_REGION=us-east-1

# AWS Cognito User Pool Configuration
COGNITO_USER_POOL_ID=us-east-1_BGLrPMS01
COGNITO_APP_CLIENT_ID=3tbo7h2b21cna6gj44h8si9g2t

# Identity Pool (si es necesario para credenciales AWS)
# COGNITO_IDENTITY_POOL_ID=us-east-1:IDENTITY_POOL_ID_AQUI

# ======================================
# API GATEWAY CONFIGURATION
# ======================================

# URL base del API Gateway (punto de entrada único)
API_GATEWAY_BASE_URL=https://api.capbox.site/v1

# URLs específicas de microservicios (para referencia)
IDENTIDAD_BASE_URL=https://api.capbox.site/v1
PLANIFICACION_BASE_URL=https://api.capbox.site/v1

# ======================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ======================================

# Tipo de flujo de autenticación
AUTH_FLOW_TYPE=USER_SRP_AUTH

# Configuraciones de contraseña
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# ======================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ======================================

# Entorno de la aplicación
APP_ENV=production

# Nombre de la aplicación
APP_NAME=CapBox

# Versión de la aplicación
APP_VERSION=1.0.0

# ======================================
# CONFIGURACIONES DE TIMEOUT
# ======================================

# Timeouts para las peticiones HTTP (en segundos)
HTTP_CONNECT_TIMEOUT=30
HTTP_RECEIVE_TIMEOUT=30
HTTP_SEND_TIMEOUT=30

# ======================================
# CONFIGURACIONES DE COGNITO ESPECÍFICAS
# ======================================

# Atributos que se verifican por email
COGNITO_VERIFICATION_METHOD=EMAIL

# MFA habilitado/deshabilitado
COGNITO_MFA_ENABLED=false

# ======================================
# CONFIGURACIONES DE DEBUG
# ======================================

# Habilitar logs de debug en desarrollo
DEBUG_MODE=true
DEBUG_AUTH=true
DEBUG_API=true

# ======================================
# CONFIGURACIONES ADICIONALES
# ======================================

# Clave de gimnasio por defecto para administradores
DEFAULT_ADMIN_GYM_KEY=ADMIN_GYM_KEY

# Tiempo de sesión en minutos
SESSION_TIMEOUT_MINUTES=1440

# ======================================
# CONFIGURACIONES OPCIONALES
# ======================================

# Google Sign-In (si se implementa en el futuro)
# GOOGLE_CLIENT_ID=tu_google_client_id_aqui

# Firebase (si se implementa push notifications)
# FIREBASE_PROJECT_ID=tu_firebase_project_id

# Analytics (si se implementa)
# ANALYTICS_ENABLED=true
